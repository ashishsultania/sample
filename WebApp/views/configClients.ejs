			}
			else if (obj.status == "deny"){
				div_alert.innerHTML = "Permission Denied ! Please contact Admin.";
				div_alert.style.display='block';
				setTimeout(hideAlert, 6000);				
			}
			else{
				div_alert.innerHTML = "Client Configuration Sending Unsuccessful.";
				div_alert.style.display='block';
